{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Quasar Dev",
      "type": "shell",
      "command": "quasar dev",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Compiling",
            "endsPattern": "App running at"
          }
        }
      ]
    },
    {
      "label": "Run E2E Tests",
      "type": "shell",
      "command": "npm run test:e2e",
      "dependsOn": "Quasar Dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Vitest",
      "type": "shell",
      "command": "npm run test:run",
      "dependsOn": "Quasar Dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
